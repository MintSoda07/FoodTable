<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 인터넷 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 진동 권한 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" /> <!-- 알림 권한 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.health.READ_STEPS" /> <!-- 헬스 커넥트 권한-->
    <uses-permission android:name="android.permission.health.READ_HEART_RATE" /> <!-- 헬스 커넥트 권한-->
    <uses-permission android:name="android.permission.health.WRITE_STEPS" /> <!-- 헬스 커넥트 권한-->
    <uses-permission android:name="android.permission.health.READ_ACTIVE_CALORIES_BURNED"/> <!-- 헬스 커넥트 권한-->
    <uses-permission android:name="android.permission.health.READ_EXERCISE"/> <!-- 헬스 커넥트 권한-->
    <uses-permission android:name="android.permission.health.WRITE_ACTIVE_CALORIES_BURNED"/> <!-- 헬스 커넥트 권한-->
    <uses-permission android:name="android.permission.health.WRITE_EXERCISE"/> <!-- 헬스 커넥트 권한-->
    <uses-permission android:name="android.permission.health.READ_TOTAL_CALORIES_BURNED"/> <!-- 헬스 커넥트 권한-->
    <uses-permission android:name="android.permission.health.WRITE_TOTAL_CALORIES_BURNED"/> <!-- 헬스 커넥트 권한-->

    <queries>
        <package android:name="com.google.android.apps.healthdata" />
    </queries>



    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_babsang"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_babsang_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodTable"
        tools:ignore="DiscouragedApi"
        tools:targetApi="35">
        <activity
            android:name=".PurchaseConfirmActivity"
            android:exported="false" />
        <activity
            android:name=".ui.subscribeNavMenu.WriteActivity"
            android:exported="false" />
        <activity
            android:name=".PuchasePage"
            android:exported="false" />
        <activity
            android:name=".Setting"
            android:exported="false" />
        <activity
            android:name=".ui.subscribeNavMenu.ChannelViewPage"
            android:exported="false" />
        <activity
            android:name=".RecipeDetailViewByHelperActivity"
            android:exported="false" />
        <activity
            android:name=".RecipeViewMakingActivity"
            android:exported="false" />
        <activity
            android:name=".AI.AiHelperActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".AI.AiChattingActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".AI.AiRecommendationActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".RecipeViewActivity"
            android:exported="false" />
        <activity
            android:name=".SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".SearchResultActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.health.HealthConnectActivity"
            android:exported="false"/>
        <activity
            android:name=".HomeAcitivity"
            android:exported="false"
            android:label="@string/title_activity_home_acitivity" />

        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.bcu.foodtable.ui.myPage.ChannelCreationActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity-alias
            android:name=".AndroidURationaleActivity"
            android:exported="true"
            android:targetActivity=".ui.health.HealthConnectActivity"
            android:permission="android.permission.START_VIEW_PERMISSION_USAGE">
            <intent-filter>
                <action android:name="android.intent.action.VIEW_PERMISSION_USAGE" />
                <category android:name="android.intent.category.HEALTH_PERMISSIONS" />
            </intent-filter>
        </activity-alias>
    </application>

</manifest>