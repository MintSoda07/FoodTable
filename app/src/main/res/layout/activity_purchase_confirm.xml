<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PurchaseConfirmActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/dimibang"
                android:text="@string/purchase_wait"
                android:textColor="#C62828"
                android:textSize="60sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_pur_suc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dimibang"
                android:gravity="center"
                android:text="@string/purchase_done"
                android:textColor="#F9A825"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/txt_pur_fail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dimibang"
                android:gravity="center"
                android:text="@string/purchase_fail"
                android:textColor="#E53935"
                android:textSize="34sp" />
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>