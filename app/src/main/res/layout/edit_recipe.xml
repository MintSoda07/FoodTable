<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFEBEE"
    tools:context=".ui.subscribeNavMenu.EditRecipeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- ✅ 수정 모드 강조 문구 -->
            <TextView
                android:id="@+id/editModeBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✏️ 레시피 수정 모드입니다"
                android:textColor="#D32F2F"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="8dp"
                android:background="#FFF3E0"
                android:fontFamily="@font/the_jamsil_bold" />

            <!-- 제목 입력 -->
            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/the_jamsil_bold"
                android:text="레시피 제목 수정"
                android:textColor="#C62828"
                android:paddingTop="16dp" />

            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="기존 제목을 수정하세요"
                android:padding="10dp"
                android:textSize="18sp" />

            <!-- 이미지 미리보기 -->
            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                android:contentDescription="선택된 이미지"
                android:scaleType="fitCenter"
                android:background="#F5F5F5"
                android:src="@android:drawable/ic_menu_camera" />

            <!-- 이미지 선택 버튼 -->
            <Button
                android:id="@+id/buttonSelectImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이미지 다시 선택"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D32F2F" />

            <!-- 카테고리 선택 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="카테고리 수정"
                android:textColor="#C62828"
                android:fontFamily="@font/the_jamsil_bold"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp" />

            <Spinner
                android:id="@+id/categorySpinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- 내용 설명 -->
            <EditText
                android:id="@+id/making_des"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top|start"
                android:hint="조리 설명을 수정하세요..."
                android:padding="10dp"
                android:inputType="textMultiLine" />

            <!-- 재료 RecyclerView -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="재료 수정"
                android:textColor="#D32F2F"
                android:fontFamily="@font/the_jamsil_bold"
                android:layout_marginTop="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/AddPageIngredientsItemList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- 태그 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="태그 수정"
                android:textColor="#D32F2F"
                android:fontFamily="@font/the_jamsil_bold"
                android:layout_marginTop="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/AddPageItemTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- 단계 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="조리 단계 수정"
                android:textColor="#D32F2F"
                android:fontFamily="@font/the_jamsil_bold"
                android:layout_marginTop="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/AddPageStageListRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- 업로드 -->
            <Button
                android:id="@+id/buttonUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="레시피 수정 완료"
                android:backgroundTint="#C62828"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/the_jamsil_bold" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
