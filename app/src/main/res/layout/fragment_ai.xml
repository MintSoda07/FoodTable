<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.subscribeNavMenu.SubscribeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/aiServiceRecipeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ai_recipe" />

            <TextView
                android:id="@+id/aiChatText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ai_chat" />

            <TextView
                android:id="@+id/aiAssistantText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ai_assistant" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>